# SMS Marketing Platform v2.0 - Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment: development, testing, staging, production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Project Information
PROJECT_NAME="SMS Marketing Platform"
VERSION="2.0.0"
DESCRIPTION="Enterprise SMS Marketing Platform with Multi-Platform Lead Validation"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Main Database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=sms_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DATABASE=sms_marketing

# MongoDB (Validation Results)
MONGODB_HOST=mongo
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=your_secure_mongo_password_here
MONGODB_DATABASE=validations

# Redis (Cache & Message Broker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Database Pool Settings
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=30
POSTGRES_POOL_TIMEOUT=30

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Gateway
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_PER_DAY=100000

# Request Limits
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30

# =============================================================================
# PLATFORM VALIDATION CONFIGURATION
# =============================================================================

# WhatsApp Validation
WHATSAPP_ENABLED=true
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_RATE_LIMIT=100
WHATSAPP_TIMEOUT=30
WHATSAPP_WEIGHT=25

# Instagram Validation
INSTAGRAM_ENABLED=true
INSTAGRAM_API_KEY=your_instagram_api_key_here
INSTAGRAM_RATE_LIMIT=50
INSTAGRAM_TIMEOUT=30
INSTAGRAM_WEIGHT=20

# Facebook Validation
FACEBOOK_ENABLED=true
FACEBOOK_API_KEY=your_facebook_api_key_here
FACEBOOK_RATE_LIMIT=50
FACEBOOK_TIMEOUT=30
FACEBOOK_WEIGHT=20

# Google Validation
GOOGLE_ENABLED=true
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_RATE_LIMIT=100
GOOGLE_TIMEOUT=30
GOOGLE_WEIGHT=20

# Apple Validation
APPLE_ENABLED=true
APPLE_API_KEY=your_apple_api_key_here
APPLE_RATE_LIMIT=50
APPLE_TIMEOUT=30
APPLE_WEIGHT=15

# General Validation Settings
MAX_CONCURRENT_VALIDATIONS=20
VALIDATION_CACHE_TTL=86400  # 24 hours
VALIDATION_RETRY_ATTEMPTS=3
VALIDATION_RETRY_DELAY=1

# Proxy Configuration
PROXY_ENABLED=false
PROXY_POOL_SIZE=50
PROXY_ROTATION_INTERVAL=300

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Bot Credentials
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername_bot
TELEGRAM_AUTHORIZED_GROUP_ID=-1002346121007

# Bot Limits
BOT_MAX_EXTRACTION_AMOUNT=10000
BOT_MAX_DAILY_EXTRACTIONS=50000
BOT_MAX_HOURLY_EXTRACTIONS=20

# Bot Features
BOT_ENABLE_RATE_LIMITING=true
BOT_ENABLE_AUDIT_LOG=true

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

# Celery Broker & Backend
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Task Configuration
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Health Checks
HEALTH_CHECK_INTERVAL=30

# Tracing (Optional)
TRACING_ENABLED=false
JAEGER_ENDPOINT=

# Grafana
GRAFANA_PASSWORD=admin

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# SMS Providers
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
SMTP_TLS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Password Hashing
BCRYPT_ROUNDS=12

# API Keys for External Services
EXTERNAL_API_RATE_LIMIT=1000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Local Storage Paths
BASE_PATH=/app
DATA_PATH=/app/data
LOGS_PATH=/app/logs
EXPORTS_PATH=/app/exports

# File Upload Limits
MAX_UPLOAD_SIZE=50485760  # 50MB
ALLOWED_FILE_TYPES=csv,xlsx,txt,json

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# Model Configuration
ML_MODEL_PATH=/app/data/models
ML_TRAINING_DATA_PATH=/app/data/training
ML_BATCH_SIZE=1000
ML_LEARNING_RATE=0.001

# Feature Store
FEATURE_STORE_ENABLED=true
FEATURE_CACHE_TTL=3600

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools (only for development environment)
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILER=false
ENABLE_MOCK_SERVICES=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_sms_marketing
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Load Balancing
ENABLE_LOAD_BALANCING=true
UPSTREAM_SERVERS=api-gateway:8080

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Resources
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5

# Scaling Configuration
MIN_REPLICAS=1
MAX_REPLICAS=5
TARGET_CPU_UTILIZATION=70

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels per Service
API_GATEWAY_LOG_LEVEL=INFO
CONTACT_MANAGEMENT_LOG_LEVEL=INFO
LEAD_SCORING_LOG_LEVEL=INFO
VALIDATION_ORCHESTRATOR_LOG_LEVEL=INFO
WHATSAPP_VALIDATOR_LOG_LEVEL=INFO
INSTAGRAM_VALIDATOR_LOG_LEVEL=INFO
FACEBOOK_VALIDATOR_LOG_LEVEL=INFO
GOOGLE_VALIDATOR_LOG_LEVEL=INFO
APPLE_VALIDATOR_LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_WEB_DASHBOARD=true
ENABLE_TELEGRAM_BOT=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_ASYNC_PROCESSING=true

# Experimental Features
ENABLE_ML_SCORING=true
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_AUTO_SCALING=false
ENABLE_MULTI_TENANCY=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Change all default passwords and API keys before deploying to production
# 2. Use strong, unique passwords for all services
# 3. Enable SSL/TLS in production environments
# 4. Configure proper backup and monitoring for production
# 5. Review and adjust rate limits based on your usage patterns
# 6. Set up proper log rotation and retention policies
# 7. Configure alerts for critical system events
# 8. Test disaster recovery procedures regularly
